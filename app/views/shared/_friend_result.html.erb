<div class="results-block">
  <%= render 'shared/flash'%>
</div>

<% if @friends %>
  <div class="card card-header results-block col-9">
    <table class="col-md-12">
      <tbody>
        <% @friends.each do |friend| %>
          <tr>
            <td><strong>Name: </strong> <%=friend.full_name %></td>
            <td><strong>Email: </strong> <%=friend.email %></td>
            <td><strong>Action </strong> <%=link_to "View Profile", user_path(friend), class:"btn btn-sm btn-success" %>
            <% if current_user.not_friend_with?(friend.id) %>
              <%= link_to 'Follow Friend', friendships_path(friend: friend),method: :post, class:"btn btn-sm btn-primary"%></td>
            <% else %>
              <span class="badge badge-secondary">You are friend</span>
            <% end %>
          </tr>
        <% end%>
      </tbody>
    </table>
  </div>
<% end %>