<div class="row">
  <div class="col-9">
    <table class="table table-bordered table-hover">
      <thead>
        <tr>
          <th scope="col">Email</th>
          <th scope="col">First Name</th>
          <th scope="col">Last Name</th>
          <th scope="col">Action</th>
        </tr>
      </thead>
      <tbody>
        <% @friends.each do |friends| %>
          <tr>
            <th scope="row"><%= friends.email %></th>
            <td><%= friends.first_name %></td>
            <td><%= friends.last_name %></td>
            <td><%=link_to "View Profile", user_path(friends.id), class:"btn btn-sm btn-success" %>
            <%= link_to 'Un Follow', friendship_path(friends),method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-sm btn-warning' %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>