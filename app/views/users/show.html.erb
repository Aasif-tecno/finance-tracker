<h2>User Details</h2>

  <div class="card card-header results-block col-9">
    <table class="col-md-12">
      <tbody>
        <tr>
            <td><strong>Name: </strong> <%= @user.full_name %></td>
            <td><strong>Email: </strong> <%= @user.email %></td>
            <td><strong>Action </strong> 
            <% if current_user.not_friend_with?(@user.id) %>
                <%= link_to 'Follow Friend', friendships_path(friend: @user),method: :post, class:"btn btn-sm btn-primary" %></td>
            <% else %>
                <span class="badge badge-secondary">You are friend</span>
            <% end %>
        </tr>
      </tbody>
    </table>
  </div>

<% if !@tracked_stocks.empty?%>
  <%= render 'shared/list' %>
<% else %>
    <p class="lead"> This user is not tracking any stocks<p>
<% end %>